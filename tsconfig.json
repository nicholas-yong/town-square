{
    "compilerOptions": 
    {
        "lib": ["es2020"],
        "target": "es2020",
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "jsx": "react",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "esModuleInterop": true,
    },
    "include": ["./src/"],
}
