{
  "compilerOptions": {
    "lib": ["es2020", "DOM"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "esModuleInterop": true
  },
  "include": [
    "./frontend/src/**.tsx", 
    "./frontend/src/**.ts", 
    "./backend/**.ts", 
    "./types.d.ts"
  ]
}
